<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:id="@+id/lifeZhiShu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生活指数"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:textSize="20sp"
            android:textColor="?android:attr/textColorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/coldRiskCt"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/lifeZhiShu"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/dressingCt"
            app:layout_constraintHorizontal_weight="1"
            >
            <ImageView
                android:id="@+id/coldRiskImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_coldrisk"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="15dp"
                />
            <TextView
                android:id="@+id/coldFeverTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="感冒"
                app:layout_constraintLeft_toRightOf="@id/coldRiskImg"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/coldRiskTv"
                />
            <TextView
                android:id="@+id/coldRiskTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/coldRiskImg"
                app:layout_constraintTop_toBottomOf="@id/coldFeverTv"
                app:layout_constraintLeft_toLeftOf="@id/coldFeverTv"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dressingCt"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/lifeZhiShu"
            app:layout_constraintLeft_toRightOf="@id/coldRiskCt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_weight="1"
            >
            <ImageView
                android:id="@+id/dressingImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_dressing"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="15dp"
                />
            <TextView
                android:id="@+id/dressTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="穿衣"
                app:layout_constraintLeft_toRightOf="@id/dressingImg"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/dressingTv"
                />
            <TextView
                android:id="@+id/dressingTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/dressingImg"
                app:layout_constraintTop_toBottomOf="@id/dressTv"
                app:layout_constraintLeft_toLeftOf="@id/dressTv"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ultravioletCt"
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@id/coldRiskCt"
            app:layout_constraintLeft_toLeftOf="@id/coldRiskCt"
            app:layout_constraintRight_toRightOf="@id/coldRiskCt"
            >
            <ImageView
                android:id="@+id/ultravioletImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_ultraviolet"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="15dp"
                />
            <TextView
                android:id="@+id/ultravioletTv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="实时紫外线"
                app:layout_constraintLeft_toRightOf="@id/ultravioletImg"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/ultravioletTv"
                />
            <TextView
                android:id="@+id/ultravioletTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/ultravioletImg"
                app:layout_constraintTop_toBottomOf="@id/ultravioletTv1"
                app:layout_constraintLeft_toLeftOf="@id/ultravioletTv1"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/carWashingCt"
            android:layout_width="0dp"
            android:layout_height="70dp"
            app:layout_constraintLeft_toLeftOf="@id/dressingCt"
            app:layout_constraintTop_toBottomOf="@id/dressingCt"
            app:layout_constraintRight_toRightOf="@id/dressingCt"
            >
            <ImageView
                android:id="@+id/carWashingImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_carwashing"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="15dp"
                />
            <TextView
                android:id="@+id/carWashingTv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="洗车"
                app:layout_constraintLeft_toRightOf="@id/carWashingImg"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/carWashingTv"
                />
            <TextView
                android:id="@+id/carWashingTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@id/carWashingImg"
                app:layout_constraintTop_toBottomOf="@id/carWashingTv1"
                app:layout_constraintLeft_toLeftOf="@id/carWashingTv1"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>