<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp">
    <TextView
        android:id="@+id/dateInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_weight="4"
        app:layout_constraintRight_toLeftOf="@id/skyIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:id="@+id/skyIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintRight_toLeftOf="@id/skyInfo"
        app:layout_constraintLeft_toRightOf="@id/dateInfo"
        app:layout_constraintTop_toTopOf="@id/dateInfo"
        app:layout_constraintBottom_toBottomOf="@id/dateInfo"
        />
    <TextView
        android:id="@+id/skyInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintTop_toTopOf="@id/dateInfo"
        app:layout_constraintBottom_toBottomOf="@id/dateInfo"
        app:layout_constraintLeft_toRightOf="@id/skyIcon"
        app:layout_constraintRight_toLeftOf="@id/temperatureInfo"
        />
    <TextView
        android:id="@+id/temperatureInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintTop_toTopOf="@id/dateInfo"
        app:layout_constraintBottom_toBottomOf="@id/dateInfo"
        app:layout_constraintLeft_toRightOf="@id/skyInfo"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>